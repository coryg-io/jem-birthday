v-app
  v-navigation-drawer(temporary v-model="sideNav" light overflow absolute)
    v-list.pa-0
      v-list-tile(avatar tag="div")
        v-list-tile-avatar
          img(src="http://facetheforce.today/random/85?r=1")
        v-list-tile-content
          v-list-tile-title JEM Site
    v-list
      v-divider
        v-list-tile(v-for="item in navItems" :key="item.title")
          v-list-tile-action
            v-icon {{ item.icon }}
          v-list-tile-content
            v-list-tile-title {{ item.title }}
  v-toolbar.primary.darken-2(fixed dense dark)
    v-toolbar-side-icon(@click.native.stop="sideNav = !sideNav")
    v-toolbar-title {{ apod.title }}

  v-speed-dial(v-model="fab.show" right bottom :transition="fab.transition" :direction="fab.direction")
    v-btn.primary.darken-2(slot="activator" dark fab v-model="fab.show")
      v-icon more_vert
      v-icon close

    v-btn.primary.lighten-1(fab dark small :href="apod.hdurl")
      v-icon fullscreen
    v-btn.primary(fab dark small href="https://apod.nasa.gov/apod/")
      v-icon launch
    v-btn.primary.darken-1(fab dark small)
      v-icon info_outline
